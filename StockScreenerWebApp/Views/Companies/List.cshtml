@model IEnumerable<StockScreenerWebApp.Models.StockScreenerDb.CompanyOverview>
@if (Model.Count() > 0)
{
    <div class="border rounded">
        <div class="border-bottom border-bottom px-3 pt-2">
            <p>Found @Model.Count() companies</p>
        </div>
        <table class="table table-striped table-hover m-0">
            @foreach (var company in Model)
            {
                <tr>
                    <td><a href="/Companies/Overview/@company.Symbol">@company.Name (@company.Symbol)</a></td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <div class="alert alert-primary" role="alert">
        No company found.
    </div>
}